<% layout('./layouts/boilerplate.ejs') -%>

    <nav class="navbar navbar-light bg-light shadow rounded p-3">
        <a class="navbar-brand mb-0 h4 text-primary" href="/dashboard/admin">Hostel Management</a>
        <div class="d-flex align-items-center">
            <a href="/auth/logout" class="btn btn-danger">Logout</a>
        </div>
    </nav>

    <div class="bg-light">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <!-- Center the nav items using mx-auto -->
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item"><a class="nav-link" href="/dashboard/admin">Dashboard</a></li>
                        <li class="nav-item"><a class="nav-link" href="/admin/mess-menu">Mess Menu</a></li>
                        <li class="nav-item"><a class="nav-link" href="/admin/feedbacks">Feedbacks</a></li>
                        <li class="nav-item"><a class="nav-link" href="/admin/notifications">Notifications</a></li>
                        <li class="nav-item"><a class="nav-link" href="/listings">Hostel Listings</a></li>
                    </ul>
                </div>
            </div>
        </nav>

        <div class="container mt-5">
            <!-- Content Section for Student Feedbacks -->
            <div class="container mt-4">
                <h1 class="text-center text-primary">Student Feedbacks</h1>

                <% if (feedbacks.length> 0) { %>
                    <div class="row">
                        <% feedbacks.forEach(feedback=> { %>
                            <div class="col-md-6">
                                <div class="card mt-4 shadow">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <%= feedback.name %>'s Feedback
                                        </h5>
                                        <p><strong>Email:</strong>
                                            <%= feedback.email %>
                                        </p>
                                        <p><strong>Phone:</strong>
                                            <%= feedback.phone %>
                                        </p>
                                        <p><strong>Hostel:</strong>
                                            <%= feedback.hostel %>
                                        </p>
                                        <p><strong>Description:</strong>
                                            <%= feedback.description %>
                                        </p>

                                        <% if (feedback.image) { %>
                                            <div class="text-center">
                                                <a href="<%= feedback.image %>" target="_blank">
                                                    <img src="<%= feedback.image %>" alt="Feedback Image"
                                                        class="img-fluid rounded shadow" style="max-width: 200px;">
                                                </a>
                                            </div>
                                            <% } %>

                                                <form action="/admin/feedbacks/delete/<%= feedback._id %>" method="POST"
                                                    onsubmit="return confirm('Are you sure you want to delete this feedback?');"
                                                    class="mt-3">
                                                    <button type="submit" class="btn btn-danger w-100">Delete
                                                        Feedback</button>
                                                </form>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                    <% } else { %>
                        <div class="alert alert-warning text-center mt-4">No feedbacks available.</div>
                        <% } %>

                            <div class="text-center mt-4">
                                <a href="/dashboard/admin" class="btn btn-secondary">Back to Admin Dashboard</a>
                            </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap Bundle JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>