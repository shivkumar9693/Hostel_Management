<% layout('./layouts/boilerplate.ejs') -%>

    <div class="container mt-5">
        <!-- Navbar -->
        <nav class="navbar navbar-light bg-light shadow rounded p-3">
            <a class="navbar-brand mb-0 h4 text-primary" href="/dashboard/admin">Hostel Management</a>
            <div class="d-flex align-items-center">
                <a href="/auth/logout" class="btn btn-danger">Logout</a>
            </div>
        </nav>

        <div class="bg-light">
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
                <div class="container">
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <!-- Center the nav items using mx-auto -->
                        <ul class="navbar-nav mx-auto">
                            <li class="nav-item"><a class="nav-link" href="/dashboard/admin">Dashboard</a></li>
                            <li class="nav-item"><a class="nav-link" href="/admin/mess-menu">Mess Menu</a></li>
                            <li class="nav-item"><a class="nav-link" href="/admin/feedbacks">Feedbacks</a></li>
                            <li class="nav-item"><a class="nav-link" href="/admin/notifications">Notifications</a></li>
                            <li class="nav-item"><a class="nav-link" href="/listings">Hostel Listings</a></li>
                        </ul>
                    </div>
                </div>
            </nav>

            <div class="container mt-4">
                <h1 class="text-center text-primary">Edit Notification</h1>

                <div class="card shadow-sm p-4 mt-4">
                    <form action="/admin/notifications/edit/<%= notification._id %>" method="POST"
                        enctype="multipart/form-data">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Notification Title:</label>
                            <input type="text" name="title" class="form-control" value="<%= notification.title %>"
                                required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Message:</label>
                            <textarea name="message" class="form-control" rows="4"
                                required><%= notification.message %></textarea>
                        </div>

                        <!-- Display Existing File If Available -->
                        <% if (notification.file) { %>
                            <div class="mb-3">
                                <label class="form-label fw-bold">Current Attachment:</label>
                                <% if (notification.file.endsWith('.pdf')) { %>
                                    <p><a href="<%= notification.file %>" target="_blank"
                                            class="btn btn-primary btn-sm">View PDF</a></p>
                                    <% } else { %>
                                        <img src="<%= notification.file %>" alt="Notification"
                                            class="img-fluid rounded shadow-sm mt-2"
                                            style="max-width: 150px; height: auto;">
                                        <% } %>
                            </div>
                            <% } %>

                                <div class="mb-3">
                                    <label class="form-label fw-bold">Upload New Notification File (Optional):</label>
                                    <input type="file" name="notificationFile" class="form-control">
                                </div>

                                <button type="submit" class="btn btn-success w-100 shadow">Update Notification</button>
                    </form>
                </div>

                <div class="text-center mt-4">
                    <a href="/admin/notifications" class="btn btn-secondary shadow">Back</a>
                </div>
            </div>
        </div>
    </div>