<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register | Hostel Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            background: #f8f9fa;
        }

        .card {
            border: none;
            border-radius: 12px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .btn-primary {
            background: #007bff;
            border: none;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            background: #0056b3;
        }

        .input-group-text {
            cursor: pointer;
            background: white;
        }

        .error-message {
            display: none;
        }
    </style>
</head>

<body>
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="card shadow-lg p-4 rounded" style="max-width: 450px; width: 100%; background: #ffffff;">
            <div class="text-center">
                <h2 class="fw-bold text-primary">üè† Hostel Management</h2>
                <p class="text-muted">Create your account</p>
            </div>

            <!-- Error Message Placeholder -->
            <div id="error-message" class="alert alert-danger text-center error-message" role="alert">
                Passwords do not match!
            </div>

            <form action="/auth/register" method="POST" onsubmit="return validatePassword()">
                <!-- Name Field -->
                <div class="mb-3">
                    <label for="name" class="form-label fw-semibold">üë§ Full Name</label>
                    <input type="text" name="name" id="name" class="form-control" placeholder="Enter your full name"
                        required>
                </div>

                <!-- Email Field -->
                <div class="mb-3">
                    <label for="email" class="form-label fw-semibold">üìß Email</label>
                    <input type="email" name="email" id="email" class="form-control" placeholder="Enter your email"
                        required>
                </div>

                <!-- Password Field with Toggle -->
                <div class="mb-3">
                    <label for="password" class="form-label fw-semibold">üîë Password</label>
                    <div class="input-group">
                        <input type="password" name="password" id="password" class="form-control"
                            placeholder="Create a password" required>
                        <span class="input-group-text border" id="togglePassword">üëÅÔ∏è</span>
                    </div>
                </div>

                <!-- Confirm Password Field -->
                <div class="mb-3">
                    <label for="password2" class="form-label fw-semibold">üîí Confirm Password</label>
                    <div class="input-group">
                        <input type="password" name="password2" id="password2" class="form-control"
                            placeholder="Confirm your password" required>
                        <span class="input-group-text border" id="togglePassword2">üëÅÔ∏è</span>
                    </div>
                </div>

                <!-- Role Selection (Radio Buttons) -->
                <div class="mb-3">
                    <label class="form-label fw-semibold">üéì Select Role</label>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="role" id="rector" value="rector" required>
                        <label class="form-check-label" for="rector">Rector</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="role" id="student" value="student" required>
                        <label class="form-check-label" for="student">Student</label>
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="mb-3 text-center">
                    <button type="submit" class="btn btn-primary w-100">Register</button>
                </div>

                <!-- Login Link -->
                <div class="text-center">
                    <small class="text-muted">Already have an account? <a href="/auth/login"
                            class="text-primary">Login</a></small>
                </div>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Password visibility toggle
        document.getElementById("togglePassword").addEventListener("click", function () {
            const passwordField = document.getElementById("password");
            passwordField.type = passwordField.type === "password" ? "text" : "password";
        });

        document.getElementById("togglePassword2").addEventListener("click", function () {
            const passwordField = document.getElementById("password2");
            passwordField.type = passwordField.type === "password" ? "text" : "password";
        });

        // Password match validation
        function validatePassword() {
            const password = document.getElementById("password").value;
            const confirmPassword = document.getElementById("password2").value;
            const errorMessage = document.getElementById("error-message");

            if (password !== confirmPassword) {
                errorMessage.style.display = "block";
                return false;
            }
            return true;
        }
    </script>

</body>

</html>